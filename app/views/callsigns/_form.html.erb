<%= form_for callsign, multipart: true, html: { class: "form-horizontal" } do |f| %>
  <% if callsign.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong><%= pluralize(callsign.errors.count, "error") %> prohibited this callsign from being saved:</strong>
      <ul>
      <% callsign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :callsign, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :callsign, class: "form-control", placeholder: "Enter the callsign" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
