<h1>Callsigns</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @callsigns.each do |callsign| %>
      <tr>
        <td><%= callsign.callsign %></td>
        <td><%= link_to 'Show', callsign %></td>
        <td><%= link_to 'Edit', edit_callsign_path(callsign) %></td>
        <td><%= link_to 'Destroy', callsign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Callsign', new_callsign_path %>
