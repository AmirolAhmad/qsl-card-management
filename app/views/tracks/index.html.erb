<div class="page-header">
  <h1>QSL Card for <%= @callsign.callsign.upcase %></h1>
</div>

<%= link_to 'Add New QSL Card Track', new_callsign_track_path, class: "btn btn-default pull-right" %>
<br><br>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-md-1">No</th>
      <th class="col-md-2">Callsign</th>
      <th>Method</th>
      <th>Date In</th>
      <th>Date Out</th>
      <th class="col-md-1">Status</th>
      <th colspan="3" class="col-md-2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tracks.each_with_index do |track, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= track.call.upcase %></td>
        <td><%= track.method %> QSL</td>
        <td><%= track.date_in.strftime("%d %B %Y") if track.date_in? %></td>
        <td><%= track.date_out.strftime("%d %B %Y") if track.date_out? %></td>
        <td><%= check_status(track) %></td>
        <td><%= link_to 'Show', callsign_track_path(id:track), class: "btn btn-primary btn-xs btn-block" %></td>
        <td><%= link_to 'Edit', edit_callsign_track_path(id:track), class: "btn btn-warning btn-xs btn-block" %></td>
        <td><%= link_to 'Delete', callsign_track_path(id:track), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
